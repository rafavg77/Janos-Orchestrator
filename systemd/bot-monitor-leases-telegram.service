[Unit]
Description=SnortTotaBot
Wants=network.target
After=network.target

[Service]
Environment="SNORT_CONFIG=/home/pi/Production/Janos-Orchestrator/src/config/config.ini"
ExecStart=/home/pi/Production/Janos-Orchestrator/venv/bin/python3 /home/pi/Production/Janos-Orchestrator/src/server/bot/bot.py
Restart=on-failure
RestartSec=10
SyslogIdentifier=bot-snort-telegram
User=pi

[Install]
WantedBy=multi-user.target